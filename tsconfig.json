{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "spokenText.d.ts",
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "ignoreDeprecations": "5.0",
    "lib": [
      "dom",
      "esnext"
    ],
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}